    <!-- Store modules ::: interface | repository -->
    <preference for="SoftCommerce\Core\Model\Store\WebsiteStorageInterface" type="SoftCommerce\Core\Model\Store\WebsiteStorage"/>
    <!-- Logger -->
    <preference for="SoftCommerce\Core\Logger\LogProcessorInterface" type="SoftCommerce\Core\Logger\LogProcessor"/>
    <type name="SoftCommerce\Core\Logger\Handler\RotationSteamHandler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <virtualType name="SoftCommerce\Core\VirtualStreamHandler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">var/log/softcommerce/debug.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="SoftCommerce\Core\VirtualRotationStreamHandler" type="SoftCommerce\Core\Logger\Handler\RotationSteamHandler">
        <arguments>
            <argument name="fileName" xsi:type="string">var/log/softcommerce/debug.log</argument>
        </arguments>
    </virtualType>
    <type name="SoftCommerce\Core\Logger\LogProcessor">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">SoftCommerce\Core\VirtualStreamHandler</item>
                <item name="rotation_debug" xsi:type="object">SoftCommerce\Core\VirtualRotationStreamHandler</item>
                <item name="mail" xsi:type="object">SoftCommerce\Core\Logger\Handler\MailStreamHandler</item>
            </argument>
        </arguments>
    </type>
    <!-- CLI -->
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="pub:static:clean" xsi:type="object">SoftCommerce\Core\Console\Command\CleanStaticViewFiles</item>
            </argument>
        </arguments>
    </type>
</config>
